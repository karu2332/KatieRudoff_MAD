<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pizza">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_pizza_slice"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_pizza_slice_round"
        android:supportsRtl="true"
        android:theme="@style/PizzaPlanet">
        <activity
            android:name=".PizzaActivity"
            android:exported="false"
            android:label="@string/title_activity_pizza"
            android:theme="@style/PizzaPlanet.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>